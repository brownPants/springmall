<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--
	public OTHER_CLASS implements com.example.springmall.MemberMapper {
	} 
 -->  
<mapper namespace="com.example.springmall.sample.mapper.SampleMapper">
	<select id="selectSampleAllCount" resultType="int">
        SELECT 
        	COUNT(*)
       	FROM jjdev.sample
    </select>
    <select id="selectSampleAll" resultType="com.example.springmall.sample.vo.Sample" parameterType="com.example.springmall.sample.vo.PageMaker">
        SELECT 
        	sample_no as sampleNo, sample_id as sampleId, sample_pw as samplePw 
       	FROM jjdev.sample
       	ORDER BY sampleNo DESC LIMIT #{startRow}, #{rowPerPage}
    </select>
    <delete id="deleteSample" parameterType="int">
    	DELETE
   		FROM jjdev.sample
   		WHERE sample_no = #{sampleNo}
    </delete>
    <insert id="insertSample" parameterType="com.example.springmall.sample.vo.Sample">
    	INSERT
   		INTO jjdev.sample
   			(sample_id, sample_pw)
   		VALUES (#{sampleId}, #{samplePw})
    </insert>
    <select id="selectOne" parameterType="int" resultType="com.example.springmall.sample.vo.Sample">
   	 	SELECT 
       		sample_no as sampleNo, sample_id as sampleId, sample_pw as samplePw 
       	FROM jjdev.sample
       	WHERE sample_no = #{sampleNo}
    </select>
    <update id="updateSample" parameterType="com.example.springmall.sample.vo.Sample">
    	UPDATE jjdev.sample 
		SET sample_id = #{sampleId}, sample_pw = #{samplePw} 
		WHERE sample_no = #{sampleNo}
    </update>
</mapper>

